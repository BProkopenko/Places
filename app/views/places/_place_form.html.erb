<div id="background-places_form" class="container-fluid">
  <div class="close">Close X</div>
  <div id="place-form" class="place-form container col-md-3">


    <%= form_for (@place), html: { multipart: true } do |f| %>
      <%= render 'shared/error_messages'%>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <%= f.file_field :picture, accept: 'image/jpeg,image/png,image/jpg', class: "form-control" %>
      <%= f.submit "Save", class: "btn btn-primary save-place" %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $('#place_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>
